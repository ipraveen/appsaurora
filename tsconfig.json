{
    "compilerOptions": {
        "types": ["node", "cypress", "@testing-library/cypress"],
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "layout/*": ["layout/*"],
            "utils/*": ["utils/*"],
            "pages/*": ["pages/*"],
        },
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true
    },
    "include": ["./cypress/**/*", "./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts"],
    "exclude": ["build", "examples", "public"]
}
