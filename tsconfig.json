{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "apps/*": ["apps/*"],
            "utils/*": ["utils/*"],
            "pages/*": ["pages/*"],
            "components/*": ["components/*"]
        },
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts"],
    "exclude": ["build", "examples", "public"]
}
